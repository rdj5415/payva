# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=auditpulse
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/auditpulse

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here
PORT=8000
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Plaid API Configuration
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox # sandbox, development, or production

# Email Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_SENDER=your-email@gmail.com
USE_SSL=False

# SMS Notification Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Notification Configuration
SLACK_API_TOKEN=your-slack-api-token

# Webhook Notification Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_SECONDS=5

# Task Manager Configuration
TASK_BATCH_SIZE=100
MAX_CONCURRENT_TASKS=10

# Model Manager Configuration
MODEL_STORAGE_PATH=./models
DEFAULT_MODEL_VERSION=1.0.0

# Admin Configuration
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=admin_password
SUPERUSER_FIRST_NAME=Admin
SUPERUSER_LAST_NAME=User 