# Database Configuration - using SQLite for tests
DATABASE_URL=sqlite+aiosqlite:///test.db
DATABASE_TEST_URL=sqlite+aiosqlite:///:memory:

# Security
SECRET_KEY=test_key_for_testing_purposes_only_not_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Third-party APIs - Mock values for testing
# QuickBooks
QUICKBOOKS_CLIENT_ID=test_client_id
QUICKBOOKS_CLIENT_SECRET=test_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:8000/api/v1/auth/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# Plaid
PLAID_CLIENT_ID=test_client_id
PLAID_SECRET=test_secret
PLAID_ENVIRONMENT=sandbox

# OpenAI
OPENAI_API_KEY=sk-test

# Notification Services
SENDGRID_API_KEY=test-sendgrid-api-key
TWILIO_ACCOUNT_SID=test-twilio-account-sid
TWILIO_AUTH_TOKEN=test-twilio-auth-token
SLACK_BOT_TOKEN=test-slack-bot-token

# Redis (for task queue)
REDIS_URL=redis://localhost:6379/0

# Encryption
ENCRYPTION_KEY=test-32-byte-encryption-key-for-test

# Feature Flags
ENABLE_ML_ENGINE=true
ENABLE_GPT_EXPLANATIONS=true
ENABLE_DEMO_MODE=true

# Logging & Monitoring
LOG_LEVEL=DEBUG
ENABLE_PROMETHEUS=false

# Email settings
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USER=test_user
SMTP_PASSWORD=test_password
EMAIL_FROM=test@example.com
